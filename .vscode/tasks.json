{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug-build",
      "type": "shell",
      "command": "xcodebuild",
      "args": ["ARCHS=x86_64", "-configuration", "Debug"]
    },
    {
      "label": "debug-build-run",
      "type": "shell",
      "command": "./App/${config:APP_NAME}.app/Contents/MacOS/${config:APP_NAME}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["debug-build"]
    },
    {
      "label": "release-build",
      "type": "shell",
      "command": "xcodebuild",
      "args": ["ARCHS=x86_64", "-configuration", "Release"]
    },
    {
      "label": "release-build-run",
      "type": "shell",
      "command": "./App/${config:APP_NAME}.app/Contents/MacOS/${config:APP_NAME}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["release-build"]
    }
  ]
}
